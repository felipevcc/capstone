{
  "include": [
    "./src/**/*",
    "./*.ts"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": "./",
    "allowJs": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "paths": {
      "$Applications/*": ["./src/app/Applications/*"],
      "$Auth/*": ["./src/app/Auth/*"],
      "$Company/*": ["./src/app/Company/*"],
      "$Company_profiles/*": ["./src/app/Company_profiles/*"],
      "$Contacts/*": ["./src/app/Contacts/*"],
      "$Filters/*": ["./src/app/Filters/*"],
      "$Messages/*": ["./src/app/Messages/*"],
      "$Multimedia/*": ["./src/app/Multimedia/*"],
      "$Professional/*": ["./src/app/Professional/*"],
      "$Professional_profiles/*": ["./src/app/Professional_profiles/*"],
      "$Projects/*": ["./src/app/Projects/*"],
      "$Ratings/*": ["./src/app/Ratings/*"],
      "$Registration/*": ["./src/app/Registration/*"],
      "$Skills/*": ["./src/app/Skills/*"],
      "$Users/*": ["./src/app/Users/*"],
      "$Infrastructure/*": ["./src/infrastructure/*"],
      "$Share/*": ["./src/share/*"],
    }
  }
}
